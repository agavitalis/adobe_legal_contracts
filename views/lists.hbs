				<div class="container">
					<div class="row">
						 {{#each documents}}
						<div class="col-md-4 mb-2">
							<div class="card" style="width: 18rem;">
								<img class="card-img-top"
									src="./images/pdf.png"
									alt="Card image cap">
								<div class="card-body">
									<h5 class="card-title">{{documentName}}</h5>
									<a href="/downloadPDF/{{_id}}" class="btn btn-primary"><i class="fa fa-download" aria-hidden="true"></i> Download</a>
									<a href="/previewPDF/{{_id}}" class="btn btn-info"><i class="fa fa-eye" aria-hidden="true"></i> Preview</a>
								</div>
							</div>
						</div>
						{{/each}}
						
					</div>
